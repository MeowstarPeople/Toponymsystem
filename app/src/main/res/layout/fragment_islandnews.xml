<?xml version="1.0" encoding="utf-8"?>
<toponymsystem.island.com.widget.refreshlayout.PullToRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/refresh_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/refresh_head" />

    <toponymsystem.island.com.widget.refreshlayout.PullToRefreshListView
        android:id="@+id/data"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:divider="@null"
        android:scrollbars="none"
        tools:listitem="@layout/layout_news_item" />

    <include layout="@layout/load_more" />

</toponymsystem.island.com.widget.refreshlayout.PullToRefreshLayout>