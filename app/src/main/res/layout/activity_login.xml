<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_gray_color"
    android:orientation="vertical">

    <include layout="@layout/activity_title" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/bar_height"
        android:background="@color/white"
        android:gravity="center">

        <ImageView
            android:id="@+id/iv_user_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_20dp"
            android:src="@drawable/ic_login_id" />

        <toponymsystem.island.com.widget.ClearEditText
            android:id="@+id/phone_number"
            android:layout_width="match_parent"
            android:layout_height="@dimen/bar_height"
            android:layout_marginLeft="@dimen/margin_30dp"
            android:layout_toRightOf="@id/iv_user_id"
            android:background="@null"
            android:hint="请输入11位手机号码"
            android:inputType="number"
            android:maxLength="11"
            android:textColorHint="@color/hint_color"
            android:textSize="@dimen/fontSize_14sp" />
    </RelativeLayout>

    <View
        style="@style/Divider"
        android:layout_marginLeft="70dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/bar_height"
        android:background="@color/white"
        android:gravity="center">

        <ImageView
            android:id="@+id/iv_user_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_20dp"
            android:src="@drawable/ic_login_password" />

        <toponymsystem.island.com.widget.ClearEditText
            android:id="@+id/password_input"
            android:layout_width="match_parent"
            android:layout_height="@dimen/bar_height"
            android:layout_marginLeft="@dimen/margin_30dp"
            android:layout_toRightOf="@id/iv_user_password"
            android:background="@null"
            android:hint="6-18位字母或数字"
            android:inputType="textPassword"
            android:maxLength="18"
            android:textColorHint="@color/hint_color"
            android:textSize="@dimen/fontSize_14sp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/login"
        android:layout_width="match_parent"
        android:layout_height="@dimen/bar_height"
        android:layout_marginLeft="@dimen/margin_30dp"
        android:layout_marginRight="@dimen/margin_30dp"
        android:layout_marginTop="@dimen/margin_30dp"
        android:background="@drawable/drawable_button_selector"
        android:gravity="center"
        android:text="登录"
        android:textColor="@color/white"
        android:textSize="@dimen/fontSize_16sp" />

    <TextView
        android:id="@+id/forget_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="@dimen/margin_20dp"
        android:layout_marginTop="@dimen/margin_20dp"
        android:padding="@dimen/padding_5dp"
        android:text="忘记密码？"
        android:textColor="@color/theme"
        android:textSize="@dimen/fontSize_16sp"
        android:textStyle="bold" />
</LinearLayout>