<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 连框颜色值 -->
    <item>
        <shape>
            <solid android:color="@color/divider_color"/>
        </shape>
    </item>
    <!-- 主体背景颜色值 -->
    <item
        android:bottom="@dimen/margin_1dp"
        android:left="@dimen/margin_1dp"
        android:right="@dimen/margin_1dp">
        <shape>
            <solid android:color="@color/white"/>

            <padding
                android:bottom="10dp"
                android:left="10dp"
                android:right="10dp"
                android:top="10dp"/>
        </shape>
    </item>

</layer-list>